@model ForgotPasswordViewModel

<div>
    <div class="page-header">
        <h1>Forgot Password?</h1>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                @if (Model.EmailSent == true)
                {
                    <div class="panel-body">
                        <p>If we have an account for the email address provided, an email with password reset instructions will be sent shortly.</p>
                     </div>
                }
                else
                {
                <div class="panel-heading">
                    Enter the email address you signed up with and we'll send you instructions to reset your password.
                </div>
                <div class="panel-body">
                    <form asp-route="ForgotPassword">
                        <div class="form-group">
                            <label asp-for="Email">Email address</label>
                            <input class="form-control" placeholder="Email address" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" name="button" value="reset-password">Send Reset Instructions</button>
                        </div>
                    </form>
                </div>
                }
            </div>
        </div>
    </div>
</div>